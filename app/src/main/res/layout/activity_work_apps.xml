<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_work_apps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cc.byod.p5.dpc.WorkApps">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:text="Koala"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_row="3"
            android:layout_column="0"
            android:foreground="@drawable/koalaclick"
            android:foregroundGravity="left|center_vertical"
            android:layout_width="150dp"
            android:onClick="InstallKoala"/>

        <TextView
            android:text="Messaging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:text="Chat"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:foreground="@android:drawable/stat_notify_chat"
            android:foregroundTint="@android:color/background_dark"
            android:foregroundGravity="left|center_vertical"
            android:layout_width="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="InstallChat"/>
    </GridLayout>
</RelativeLayout>
